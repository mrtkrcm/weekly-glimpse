{
	"name": "weekly-glimpse",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "node -r dotenv/config ./build",
		"test:preview": "PORT=4174 NODE_ENV=test DEBUG=* node -r dotenv/config ./build",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"openapi:validate": "redocly lint src/lib/openapi/openapi.yaml",
		"openapi:bundle": "redocly bundle src/lib/openapi/openapi.yaml -o src/lib/openapi/openapi.bundled.yaml",
		"openapi:preview": "redocly preview-docs src/lib/openapi/openapi.yaml",
		"openapi:build": "redocly build-docs src/lib/openapi/openapi.yaml -o src/lib/openapi/docs",
		"openapi:generate": "tsx scripts/generate-openapi.ts",
		"docker:build": "docker build -t weekly-glimpse .",
		"docker:dev": "docker-compose up"
	},
	"devDependencies": {
		"@asteasolutions/zod-to-openapi": "^7.3.0",
		"@playwright/test": "^1.51.1",
		"@redocly/cli": "^1.34.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.20.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/postcss": "^4.0.15",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.15",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@testing-library/user-event": "^14.6.1",
		"@types/js-yaml": "^4.0.9",
		"autoprefixer": "^10.4.21",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.30.5",
		"js-yaml": "^4.1.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.25.3",
		"svelte-check": "^4.1.5",
		"swagger-ui-express": "^5.0.0",
		"tailwindcss": "^4.0.15",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"vite": "^6.2.2",
		"vitest": "^3.0.9"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@sentry/node": "^9.8.0",
		"@types/pg": "^8.11.11",
		"@types/ws": "^8.18.0",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.40.1",
		"drizzle-zod": "^0.7.0",
		"googleapis": "^148.0.0",
		"hammerjs": "^2.0.8",
		"lucia": "^3.2.2",
		"pg": "^8.14.1",
		"postgres": "^3.4.5",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"svelte-dnd-action": "^0.9.60",
		"ws": "^8.18.1",
		"zod": "^3.24.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
